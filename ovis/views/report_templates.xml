<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="external_layout_boxed" inherit_id="web.external_layout_boxed">
		<xpath expr="//div[hasclass('o_boxed_header')]/div[hasclass('row') and hasclass('mb8')]" position="attributes">
			<attribute name="class">row mb2</attribute>
		</xpath>
		<xpath expr="//div[hasclass('o_boxed_header')]/div[hasclass('row') and hasclass('mb2')]/div[hasclass('col-6')]" position="attributes">
			<attribute name="class">col-4</attribute>
		</xpath>
		<xpath expr="//div[hasclass('o_boxed_header')]/div[hasclass('row') and hasclass('mb2')]/div[hasclass('col-6') and hasclass('text-right') and hasclass('mb4')]" position="attributes">
			<attribute name="class">col-8 text-right mb4</attribute>
		</xpath>
	</template>
</odoo>